<Window x:Class="DataGuardApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=netstandard"
        Title="DataGuard" Height="650" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <!-- Button Style for Left and Right buttons -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundedEdgeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF7B7B7B"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        </Style>
    </Window.Resources>

    <!-- Base Shield (Main Window) -->
    <Border BorderBrush="LightGray" BorderThickness="2" CornerRadius="130" Margin="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                <GradientStop Color="#FF151515" Offset="0"/>
                <GradientStop Color="#FF252525" Offset="0.2"/>
                <GradientStop Color="#FF444444" Offset="0.5"/>
                <GradientStop Color="#FF252525" Offset="0.8"/>
                <GradientStop Color="#FF151515" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid ClipToBounds="True">
            <!-- Define Rows in the Grid -->
            <Grid.RowDefinitions>
                <!-- Row 0: Title and Window Controls -->
                <RowDefinition Height="Auto" />
                <!-- Row 1: Application Logo -->
                <RowDefinition Height="Auto" />
                <!-- Row 2: How-To-Use Display -->
                <RowDefinition Height="Auto" />
                <!-- Row 3: File Selection, Indicators, and main Buttons -->
                <RowDefinition Height="160" />
                <!-- Row 4: Help and Authors -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Row 0: Title and Window Controls -->
            <Grid Grid.Row="0" Height="40" Background="Transparent">
                <!-- Title Text -->
                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="80,0,0,0"
                           Text="DataGuard" FontSize="16" FontWeight="Bold" Foreground="LightGray" />

                <!-- Title Bar Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,80,0">
                    <!-- Minimize Button -->
                    <Button Content="__" Width="30" Height="30" Background="Transparent" Foreground="LightGray"
                            BorderBrush="DarkGray" BorderThickness="2" Click="MinimizeButton_Click"
                            Style="{StaticResource RoundButtonStyle}" Margin="0,0,-2,0" />

                    <!-- Close Button -->
                    <Button Content="X" Width="30" Height="30" Background="Transparent" Foreground="LightGray"
                            BorderBrush="DarkGray" BorderThickness="2" Click="CloseButton_Click"
                            Style="{StaticResource RoundButtonStyle}" />
                </StackPanel>
            </Grid>

            <!-- Row 1: Application Logo -->
            <Grid Grid.Row="1" Height="50" Background="Transparent">
                <!-- Application Logo -->
                <Image Source="pack://application:,,,/resources/logo.png" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>

            <!-- Row 2: How-To-Use Display -->
            <Grid Grid.Row="2" Height="150" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftColumn" Width="*"/>
                    <ColumnDefinition x:Name="CenterColumn" Width="Auto"/>
                    <ColumnDefinition x:Name="RightColumn" Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Left Column Text -->
                <TextBlock x:Name="LeftText" Grid.Column="0" Foreground="LightGray" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" Visibility="Collapsed">
                    <Run Text="Left Side:"/>
                    <LineBreak/>
                    <Run Text="Line 1 of text."/>
                    <LineBreak/>
                    <Run Text="Line 2 of text."/>
                    <LineBreak/>
                    <Run Text="Line 3 of text."/>
                </TextBlock>

                <TextBlock x:Name="RightText" Grid.Column="2" Foreground="LightGray" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,0" Visibility="Collapsed">
                    <Run Text="Right Side:"/>
                    <LineBreak/>
                    <Run Text="Line 1 of text."/>
                    <LineBreak/>
                    <Run Text="Line 2 of text."/>
                    <LineBreak/>
                    <Run Text="Line 3 of text."/>
                </TextBlock>

                <Grid Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="20" Height="140">
                    <Border BorderBrush="#FFD4D4D4"
                            Background="Chartreuse"
                            BorderThickness="1,1,1,0"
                            CornerRadius="10,10,0,0"
                            Cursor="Hand"
                            ClipToBounds="True" SnapsToDevicePixels="True">
                    </Border>

                    <Rectangle Width="20" Height="130" VerticalAlignment="Bottom" MouseDown="TopBar_MouseDown" Cursor="Hand">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#7F000000" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="0.5"/>
                                <GradientStop Color="#7F000000" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                        <Rectangle.ToolTip>
                            <ToolTip Content="View Instructions"/>
                        </Rectangle.ToolTip>
                    </Rectangle>

                    <Border Width="20" CornerRadius="10,10,0,0" Height="10" VerticalAlignment="Top">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF565656" Offset="0"/>
                                <GradientStop Color="#FF565656" Offset="0.2"/>
                                <GradientStop Color="#FFCECECE" Offset="0.5"/>
                                <GradientStop Color="#FF565656" Offset="0.8"/>
                                <GradientStop Color="#FF565656" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect
                                Color="Black"
                                BlurRadius="1"
                                ShadowDepth="0.5"
                                Direction="90"
                                Opacity="0.7"/>
                        </Border.Effect>
                    </Border>
                </Grid>

            </Grid>

            <!-- Row 3: File Selection, Indicators, and main Buttons -->
            <Grid Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="MD5" FontWeight="Bold" FontSize="16" Foreground="LightGray" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="84,6,0,0" />
                <TextBlock Text="SHA-1" FontWeight="Bold" FontSize="16" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,6,70,0" />
                <TextBlock Text="SHA-512" FontWeight="Bold" FontSize="16" Foreground="LightGray" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,52,10" />
                <TextBlock Text="SHA-256" FontWeight="Bold" FontSize="16" Foreground="LightGray" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="54,0,0,10" />
                <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" Grid.Row="3">
                    <!-- The Rounded Rectangle (Body of the Shield) -->
                    <Border Width="140" VerticalAlignment="Center" Height="160" HorizontalAlignment="Center" CornerRadius="30">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                <GradientStop Color="#FF7B7B7B" Offset="0"/>
                                <GradientStop Color="#FF828282" Offset="0.2"/>
                                <GradientStop Color="#FFF1F1F1" Offset="0.5"/>
                                <GradientStop Color="#FF828282" Offset="0.8"/>
                                <GradientStop Color="#FF7B7B7B" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <!-- Status Indicators -->
                            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                                <Ellipse x:Name="indicatorMD5" Width="20" Height="20" Fill="LightGray"/>
                                <Image Source="pack://application:,,,/resources/rec.png" Width="20" Height="20">
                                    <Image.RenderTransform>
                                        <ScaleTransform ScaleX="-1"/>
                                    </Image.RenderTransform>
                                    <Image.RenderTransformOrigin>0.5,0.5</Image.RenderTransformOrigin>
                                </Image>
                            </Grid>
                            <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                <Ellipse x:Name="indicatorSHA1" Width="20" Height="20" Fill="LightGray"/>
                                <Image Source="pack://application:,,,/resources/rec.png" Width="20" Height="20" />
                            </Grid>
                            <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
                                <Ellipse x:Name="indicatorSHA256" Width="20" Height="20" Fill="LightGray"/>
                                <Image Source="pack://application:,,,/resources/rec.png" Width="20" Height="20"/>
                            </Grid>
                            <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
                                <Ellipse x:Name="indicatorSHA512" Width="20" Height="20" Fill="LightGray"/>
                                <Image Source="pack://application:,,,/resources/rec.png" Width="20" Height="20">
                                    <Image.RenderTransform>
                                        <ScaleTransform ScaleX="-1"/>
                                    </Image.RenderTransform>
                                    <Image.RenderTransformOrigin>0.5,0.5</Image.RenderTransformOrigin>
                                </Image>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- File Drag-and-Drop Area -->
                    <Button x:Name="FileButton"
                            Width="100"
                            Height="100"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="FileButton_Click"
                            AllowDrop="True"
                            DragEnter="FileButton_DragEnter"
                            Drop="FileButton_Drop"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Ellipse Fill="Chartreuse" Stroke="#7F000000" StrokeThickness="4"/>
                                    <Image Source="pack://application:,,,/resources/pointer.png"
                                           Width="50" Height="50"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Opacity="0.33"/>
                                    <Image Source="pack://application:,,,/resources/rec.png" Width="100" Height="100" Opacity="0.2"/>
                                </Grid>                                
                            </ControlTemplate>
                        </Button.Template>
                        <Button.ToolTip>
                            <ToolTip Content="Drag and Drop a File or click to browse" />
                        </Button.ToolTip>
                    </Button>

                    <!-- Buttons on the Left and Right of the Rounded Rectangle -->
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Center">
                        <!-- Left Button -->
                        <Button Content="Link to&#x0a;Download Source" Width="128" Style="{StaticResource RoundedEdgeButtonStyle}" Margin="70,0" Height="50">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10,0,0,10">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                                <GradientStop Color="#FF7B7B7B" Offset="0"/>
                                                <GradientStop Color="#FF7B7B7B" Offset="0.8"/>
                                                <GradientStop Color="Black" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Right Button -->
                        <Button Content="New Version&#x0a;Available" Width="128" Style="{StaticResource RoundedEdgeButtonStyle}" Margin="70,0" Height="50">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="0,10,10,0">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="Black" Offset="1"/>
                                                <GradientStop Color="#FF7B7B7B" Offset="0.8"/>
                                                <GradientStop Color="#FF7B7B7B" Offset="0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Row 4: Info and Authors -->
            <Grid Grid.Row="4" Height="200" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column Text -->
                <Border CornerRadius="10"
                        BorderBrush="#FFC1C1C1"
                        BorderThickness="2"
                        Margin="31,10,10,10" Background="#FF171717" ClipToBounds="True" SnapsToDevicePixels="True">
                    <RichTextBox x:Name="outputTextBox"
                                 Grid.Column="0"
                                 Margin="5,5,5,5"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Hidden"
                                 AcceptsReturn="True"
                                 Focusable="False"
                                 FontSize="12"
                                 FontFamily="Consolas"
                                 Foreground="LightGray"
                                 BorderThickness="0"
                                 BorderBrush="Transparent"
                                 FocusVisualStyle="{x:Null}"
                                 Cursor="ScrollNS"
                                 Background="#FF171717"/>
                </Border>

                <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="20" Height="190">
                    <Border x:Name="ProgressBar"
                            BorderBrush="#FFD4D4D4"
                            BorderThickness="1,0,1,1"
                            CornerRadius="0,0,10,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop x:Name="progressStop" Color="Chartreuse" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Rectangle Width="20" Height="180" VerticalAlignment="Top">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#7F000000" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="0.5"/>
                                <GradientStop Color="#7F000000" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Border Width="20" CornerRadius="0,0,10,10" Height="10" VerticalAlignment="Bottom">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF565656" Offset="0"/>
                                <GradientStop Color="#FF565656" Offset="0.2"/>
                                <GradientStop Color="#FFCECECE" Offset="0.5"/>
                                <GradientStop Color="#FF565656" Offset="0.8"/>
                                <GradientStop Color="#FF565656" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect
                                Color="Black"
                                BlurRadius="1"
                                ShadowDepth="0.5"
                                Direction="260"
                                Opacity="0.7"/>
                        </Border.Effect>
                    </Border>
                </Grid>

                <!-- Right Column Text -->
                <TextBlock Grid.Column="2"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="LightGray"
                           FontSize="10"
                           FontFamily="Consolas"
                           FontWeight="SemiBold">
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                    <Run Text="Developed by:"/>
                    <LineBreak/>
                    <Run Text="Anthony Stone"/>
                    <LineBreak/>
                    <Run Text="Koda Shute"/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Text="Diploma in"/>
                    <LineBreak/>
                    <Run Text="Software Development"/>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Text="Yoobee College"/>
                    <LineBreak/>
                    <Run Text="of Creative Innovation"/>
                </TextBlock>
            </Grid>


        </Grid>
    </Border>
</Window>
